<script>
    $(window).on("scroll", function () {
        if ($(window).scrollTop()) {
            document.getElementById("test").style.backgroundColor = "rgb(255, 255, 255)";
            document.getElementById("test").style.boxShadow = "1px 3px 12px rgb(0, 0, 0)";
            document.getElementById("test").style.transition = "1.5s";
            document.getElementById("elem-menu").style.color = "rgb(194, 23, 42)";
            document.getElementById("elem-menu2").style.color = "rgb(194, 23, 42)";
            document.getElementById("elem-menu3").style.color = "rgb(194, 23, 42)";
            document.getElementById("elem-menu4").style.color = "rgb(194, 23, 42)";
            document.getElementById("elem-menu5").style.color = "rgb(194, 23, 42)";
            document.getElementById("elem-menu6").style.color = "rgb(194, 23, 42)";
        } else {
            document.getElementById("test").style.backgroundColor = "rgb(255, 255, 255, 0)";
            document.getElementById("test").style.boxShadow = "0px 0px 0px rgb(255, 255, 255)";
            document.getElementById("elem-menu").style.color = "white";
            document.getElementById("elem-menu2").style.color = "white";
            document.getElementById("elem-menu3").style.color = "white";
            document.getElementById("elem-menu4").style.color = "white";
            document.getElementById("elem-menu5").style.color = "white";
            document.getElementById("elem-menu6").style.color = "white";
            document.getElementById("test").style.transition = "1s";
        }
    })

    function alert_connexion(){
    Swal.fire({
        title: 'Vous êtes connecté !',
        type: 'success',
        backdrop:false,
        position:'bottom-end',
        heightAuto:false,
        showConfirmButton: false,
        timer: 2000
        })
    }

    function alert_deconnexion(){
    Swal.fire({
        title: 'Vous êtes déconnecté !',
        type: 'warning',
        backdrop:false,
        position:'bottom-end',
        heightAuto:false,
        showConfirmButton: false,
        timer: 2000
        })
    }



</script>

